#!/usr/bin/env bash
# Fix the Nginx to listen on port 80 of all the server's active IPv4 IPs

CONFIG1="/etc/nginx/sites-available/default"
# CONFIG2="/etc/nginx/sites-enabled/default"

# Add a listen directive within the server blocks of the files
sudo sed -i '/server {/a \ \ \ \ listen 80;' "$CONFIG1"
# sudo sed -i '/server {/a \ \ \ \ listen 80;' "$CONFIG2"

# Configure firewall to allow incoming connection on port 80
# sudo ufw allow 80/tcp

# Resart the firewall
# sudo ufw reload

# Restart the Nginx server
# sudo /etc/init.d/nginx restart
